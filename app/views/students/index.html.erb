<div class="row">
    <div class="col s12 ">
        <h3 class="center-align">Student listing</h3>
    </div>
</div>

<div class="row">
<% @students.each do |student| %>
    <div class="col s6 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title"><%= student.name %> </span>
                <span class="card-title"><%= student.email %> </span>
                <p> Enrollments:
                <% if student.courses.empty? %>
                none
                <% else %>
                    <% student.courses.each do |course| %>
                        <%= course.name %>
                    <% end %>
                <% end %> 
                </p>
            </div>
    <div class="card-action">
      <%= link_to "View Profile", student_path(student) %>
    </div>
  </div>
</div>

<% end %>
</div>


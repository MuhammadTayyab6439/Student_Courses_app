<div class="row">
    <div class="col s12 ">
        <h3 class="center-align">Student Show Page</h3>
    </div>
</div>

<div class="row">

    <div class="col s6 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title"><%= @student.name %> </span>
                <span class="card-title"><%= @student.email %> </span>
                <p> Enrollments:
                <% if @student.courses.empty? %>
                none 
                <% else %>
                    <% @student.courses.each do |course| %>
                       <ul> <li><%= course.name %></li> </ul>
                    <% end %>
                <% end %>    
                </p>
            </div>
    
         </div>
         <% if logged_in? && current_user.id==@student.id %>
         <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
         <% end %>
    </div>

   
</div>

